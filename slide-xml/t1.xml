<?xml version="1.0" encoding="UTF-8"?>
<SlideTemplate xmlns:maps="http://hypothesis.cz/xml/maps"
	UID="A79ACF72-629A-41C8-8A08-642BCA76CBC0">
	<Viewport>
		<VerticalLayout Id="ct001">
			<Properties>
				<Width Value="100%" />
				<Height Value="100%" />
			</Properties>
			<Components>

				<!--vrchná lišta -->
				<HorizontalLayout Id="ct001_ct001">
					<Properties>
						<Width Value="100%" />
						<Height Value="10%" />
						<Alignment Value="mc" />
					</Properties>
					<Components>

						<Panel Id="ct001_ct001_ct001">  <!--popisok -->
							<Properties>
								<Border Value="True" />
								<Width Value="90%" />
								<Height Value="100%" />
							</Properties>
							<Components>
								<VerticalLayout Id="ct001_ct001_ct001_ct001">
									<Properties>
										<Width Value="100%" />
										<Height Value="100%" />
										<Alignment Value="mc" />
									</Properties>
									<Components>
										<Label Id="title">
											<Properties>
												<Caption Value="Možnost nastavení map. obsahu" />
											</Properties>
										</Label>
									</Components>
								</VerticalLayout>
							</Components>
						</Panel>

						<HorizontalLayout Id="ct001_ct001_ct002"> <!--tlačítko - nápoveda -->
							<Properties>
								<Width Value="10%" />
								<Height Value="100%" />
								<Alignment Value="mc" />
							</Properties>
							<Components>
								<Button Id="napoveda">
									<Properties>
										<Width Value="100%" />
										<Height Value="100%" />
										<Caption Value="Nápověda" />
									</Properties>
									<Handlers>
										<Click>
											<Call Action="showHelp" />
										</Click>
									</Handlers>
								</Button>
							</Components>
						</HorizontalLayout>

					</Components>
				</HorizontalLayout>


				<!--stred - na vyplnenie -->
				<HorizontalLayout Id="ct001_ct002">
					<Properties>
						<Width Value="100%" />
						<Height Value="75%" />
						<Alignment Value="mc" />
					</Properties>
					<Components>

						<HorizontalLayout Id="ct001_ct002_ct001">  <!--ľavý okraj -->
							<Properties>
								<Width Value="10%" />
								<Height Value="100%" />
							</Properties>
						</HorizontalLayout>

						<FormLayout Id="ct001_ct002_ct002"> <!--selectpanel -->
							<Properties>
								<Border Value="True" />
								<Width Value="30%" />
								<Height Value="60%" />
							</Properties>
							<Components>
								<SelectPanel Id="sp">
									<Properties>
										<Width Value="95%" />
										<Height Value="60%" />
										<Orientation Value="Vertical" />
										<Caption Value="Zvolte vrstvy mapy:" />
										<Captions
											Value="'státy','názvy / zkratky států','vodní toky','významná města'" />
									</Properties>
									<Validators>
										<Empty>
											<Message>Musí být vybráno.</Message>
										</Empty>
									</Validators>
									<Handlers>
										<Click>
											<Expression>mapIndex=ComponentData->getButtonIndex()</Expression>
											<Call Action="selectMap" />
										</Click>
									</Handlers>
								</SelectPanel>
							</Components>
						</FormLayout>

						<HorizontalLayout Id="ct001_ct002_ct003">  <!--stredný okraj -->
							<Properties>
								<Width Value="5%" />
								<Height Value="100%" />
							</Properties>
						</HorizontalLayout>

						<maps:Map Id="ct001_ct002_ct004">               <!--mapa -->
							<Properties>
								<Width Value="45%" />
								<Height Value="100%" />
								<Alignment Value="mc" />
							</Properties>
							<Layers>
								<ImageSequenceLayer Id="sequence_layer">
								</ImageSequenceLayer>
							</Layers>
						</maps:Map>

						<HorizontalLayout Id="ct001_ct002_ct005">  <!--pravý okraj -->
							<Properties>
								<Width Value="10%" />
								<Height Value="100%" />
							</Properties>
						</HorizontalLayout>

					</Components>
				</HorizontalLayout>


				<!--spodná lišta -->
				<HorizontalLayout Id="ct001_ct003">
					<Properties>
						<Width Value="100%" />
						<Height Value="10%" />
						<Alignment Value="mc" />
					</Properties>
					<Components>

						<Panel Id="ct001_ct003_ct001">  <!--miesto naľavo od tlačítka -->
							<Properties>
								<Border Value="False" />
								<Width Value="80%" />
								<Height Value="100%" />
							</Properties>
						</Panel>

						<HorizontalLayout Id="ct001_ct003_ct002"> <!--tlačítko - pokračovanie ďalej -->
							<Properties>
								<Width Value="10%" />
								<Height Value="100%" />
								<Alignment Value="mc" />
							</Properties>
							<Components>
								<Button Id="button">
									<Properties>
										<Width Value="80%" />
										<Height Value="80%" />
										<Caption Value="pokračování dále" />
									</Properties>
									<Handlers>
										<Click>
											<Call Action="nextSlide" />
										</Click>
									</Handlers>
								</Button>
							</Components>
						</HorizontalLayout>

						<Panel Id="ct001_ct003_ct003">  <!--miesto napravo od tlačítka -->
							<Properties>
								<Border Value="False" />
								<Width Value="10%" />
								<Height Value="100%" />
							</Properties>
						</Panel>

					</Components>
				</HorizontalLayout>


				<!--zápätie (voľný priestor na spodku) -->
				<HorizontalLayout Id="ct001_ct003">
					<Properties>
						<Width Value="100%" />
						<Height Value="5%" />
						<Alignment Value="mc" />
					</Properties>
				</HorizontalLayout>

			</Components>
		</VerticalLayout>
	</Viewport>

	<Variables>
		<Variable Id="napoveda" Type="Object">
			<Reference>
				<Window Id="help_window" />
			</Reference>
		</Variable>
		<Variable Id="mapIndex" Type="Integer" Value="0" />
		<Variable Id="calc" Type="Integer" Value="0" />
		<Variable Id="seqLayer" Type="Object">
			<Reference>
				<Component Id="sequence_layer" />
			</Reference>
		</Variable>
	</Variables>

	<Actions>
		<Action Id="nextSlide">
			<Expression>Navigator->next()</Expression>
		</Action>
		<Action Id="showHelp">
			<Expression>napoveda->open()</Expression>
		</Action>
		<Action Id="selectMap">
			<Expression>calc=mapIndex-1</Expression>
			<Expression>seqLayer->setTileIndex(calc)</Expression>
		</Action>
	</Actions>

	<Windows>
		<Window Id="help_window">
			<Properties>
				<Width Value="1101" />
				<Height Value="440" />
			</Properties>
			<Components>
				<HorizontalLayout Id="ct002_ct001">
					<Components>
						<Image Id="help_image">
							<Properties>
								<Width Value="991" />
								<Height Value="330" />
								<Url
									Value="http://hypothesis.cz/gallery/albums/userpics/10005/informace.png" />
							</Properties>
						</Image>
					</Components>
				</HorizontalLayout>
			</Components>
		</Window>
	</Windows>
	
	<OutputValue1>
		<Expression>mapIndex</Expression>
	</OutputValue1>
</SlideTemplate>