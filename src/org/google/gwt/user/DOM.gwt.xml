<module>
  <inherits name="com.google.gwt.core.Core"/>
  <inherits name="com.google.gwt.dom.DOM"/>
  <inherits name="com.google.gwt.user.DOM"/>
  <inherits name="com.google.gwt.user.UserAgent"/>

  <replace-with class="org.google.gwt.user.client.impl.DOMImplOpera">
    <when-type-is class="com.google.gwt.user.client.impl.DOMImpl"/>
    <when-property-is name="user.agent" value="opera"/>
  </replace-with>

  <replace-with class="org.google.gwt.user.client.impl.DOMImplWebkit">
    <when-type-is class="com.google.gwt.user.client.impl.DOMImpl"/>
    <when-property-is name="user.agent" value="safari"/>
  </replace-with>

  <replace-with class="org.google.gwt.user.client.impl.DOMImplIE10">
    <when-type-is class="com.google.gwt.user.client.impl.DOMImpl"/>
    <when-property-is name="user.agent" value="ie10"/>
  </replace-with>

  <replace-with class="org.google.gwt.user.client.impl.DOMImplIE9">
    <when-type-is class="com.google.gwt.user.client.impl.DOMImpl"/>
    <when-property-is name="user.agent" value="ie9"/>
  </replace-with>

  <replace-with class="org.google.gwt.user.client.impl.DOMImplMozilla">
    <when-type-is class="com.google.gwt.user.client.impl.DOMImpl"/>
    <when-property-is name="user.agent" value="gecko1_8"/>
  </replace-with>
</module>
