<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>hypothesis</display-name>
	<context-param>
		<description>
		Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<description>
		Application configuration file</description>
		<param-name>configFile</param-name>
		<param-value>/WEB-INF/application.cfg.xml</param-value>
	</context-param>
	<context-param>
		<description>
		Log4j configuration file</description>
		<param-name>log4jConfigFile</param-name>
		<param-value>/WEB-INF/log4j.cfg.xml</param-value>
	</context-param>
	<servlet>
		<servlet-name>Hypothesis Application</servlet-name>
		<servlet-class>
		com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
			Hypothesis main application class</description>
			<param-name>application</param-name>
			<param-value>org.hypothesis.application.HypothesisApplication</param-value>
		</init-param>
		<init-param>
			<description>
			Application widgetset</description>
			<param-name>widgetset</param-name>
			<param-value>org.hypothesis.terminal.gwt.HypothesisWidgetset</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>Hypothesis Manager</servlet-name>
		<servlet-class>
		com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
			Hypothesis manager application class</description>
			<param-name>application</param-name>
			<param-value>org.hypothesis.application.ManagerApplication</param-value>
		</init-param>
		<init-param>
			<description>
			Application widgetset</description>
			<param-name>widgetset</param-name>
			<param-value>org.hypothesis.terminal.gwt.HypothesisWidgetset</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>Hypothesis Collector</servlet-name>
		<servlet-class>
		com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
			Hypothesis collector application class</description>
			<param-name>application</param-name>
			<param-value>org.hypothesis.application.CollectorApplication</param-value>
		</init-param>
		<init-param>
			<description>
			Application widgetset</description>
			<param-name>widgetset</param-name>
			<param-value>org.hypothesis.terminal.gwt.HypothesisWidgetset</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>JNLP Servlet</servlet-name>
		<servlet-class>
		org.hypothesis.services.JnlpDownloadServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>TEST Application</servlet-name>
		<servlet-class>
		com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
			Test application class</description>
			<param-name>application</param-name>
			<param-value>org.hypothesis.application.junit.TestApplication</param-value>
		</init-param>
		<init-param>
			<description>
			Application widgetset</description>
			<param-name>widgetset</param-name>
			<param-value>org.hypothesis.terminal.gwt.HypothesisWidgetset</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Hypothesis Application</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Hypothesis Manager</servlet-name>
		<url-pattern>/manager/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Hypothesis Collector</servlet-name>
		<url-pattern>/collector/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>JNLP Servlet</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TEST Application</servlet-name>
		<url-pattern>/test/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
